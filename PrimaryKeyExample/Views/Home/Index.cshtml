@{
    ViewBag.Title = "Home Page";
}
<link href="/Content/Site.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/jquery-1.10.2.min.js" type="text/javascript"></script>
<script src="~/Scripts/modernizr-2.6.2.js" type="text/javascript"></script>

<div class="jumbotron">
    <h1>Recharge Portal</h1>
    <p class="lead">Low With Balance? </p>
    <p class="btn btn-primary btn-lg" , id="Recharge">Click to Recharge &raquo;</p>
</div>
@if (!WebSecurity.IsAuthenticated)
{
    <script type="text/javascript">
    $('#Recharge').click(function () {
        document.location = '@Url.Action("Login","NewUserRegister")';
    });
    </script>

}
else
{
    <script type="text/javascript">
    $('#Recharge').click(function () {
        document.location = '@Url.Action("Recharge","Recharge")';
    });
    </script>
}
@Html.ActionLink("Continue As A guest?", "Index", "Recharge")

